<h2>Dynamic Customers Table</h2>

<table id="customers-table" class="dynamic-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.customerID}}</td>
            <td>{{this.fName}}</td>
            <td>{{this.lName}}</td>
            <td>{{this.phoneNumber}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table using AJAX --}}
<div class="form-box">
<h2>Add a New Customer</h2>
<p>To add a new customer, please enter the information below and click 'Submit'!</p>
<form id="add-customer-form-ajax">
    
    <label for="input-fname">First Name: </label>
    <input type="text" name="input-fname" id="input-fname" required>

    <label for="input-lname">Last Name: </label>
    <input type="text" name="input-lname" id="input-lname" required>

    <label for="input-lname">Phone Number: </label>
    <input type="text" name="input-phonenumber" id="input-phonenumber">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_customer.js"></script>
</div>
